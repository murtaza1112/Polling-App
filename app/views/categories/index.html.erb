<div class="container">
  <h1 class="head">Categories</h1>
<%= link_to 'New Category', new_category_path, :class=>"btn btn-block btn-dark" %>
<br>
<% if current_user.admin==true %>

<table border=3 class="table table-hover table-dark" style="text-align:center;">
  <thead>
    <tr>
      <th>Name</th>
      <th>Count</th>
      <th>Edit</th>
      <th>Delete</th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name.capitalize %></td>
        <td><%= category.count %></td>
        <td><%= link_to 'Edit', edit_category_path(category) %></td>
        <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>  
  </tbody>
</table>




<% else%>

<h4>Categories Available:</h4>
<ul> 
           
    <% @categories.each do |category| %>
      
        <li><%= category.name %></li>
        
    <% end %>  
</ul> 
<%= link_to 'Back', root_path %>
<%end%>

</div>