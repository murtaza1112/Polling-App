<div class="container">
<h2 align=center>My Polls</h2>

<%if @apolls.empty? %>
<div class="mypol">
 <p class="polls2">Sorry,you have not created any polls.</p>

 <p class="polls2"><%= link_to 'Add Poll', new_mypoll_path ,:class=>"btn btn-dark" %></p>
</div>
<%else%>
<table border=1 style="margin: 0 auto;text-align: center;" class="table table-hover table-sm table-secondary">
  <thead>
    <tr>
      <th>Sr No.</th>
      <th>Category</th>
      <th>User</th>
      <th>Edit</th>
      <th>Destroy</th>
    </tr>
  </thead>

  <tbody>
    <% @apolls.each do |mypoll| %>
     
      <tr>
        <td>1</td>
        <td><%= mypoll.category.name.capitalize %></td>
        <td><%= mypoll.user.email %></td>
        <td><%= link_to 'Edit', edit_mypoll_path(mypoll) %></td>
        <td><%= link_to 'Destroy', mypoll, method: :delete, data: { confirm: 'Are you sure?' } %></td>
       </tr> 
       
  <%end%>
  </tbody>
</table>
 <%end%>
<br><Br>


<h2 align=center>Other Polls</h2>
<br>

<%if @anpolls.empty? %>
 <p class="polls2">Sorry,No polls have been created.</p>
<%else%>
<%i=0%>
<table border=1 style="margin: 0 auto;text-align: center;" class="table table-hover table-sm table-dark">
  <thead>
    <tr>
      <th>Sr No.</th>
      <th>Category</th>
      <th>User</th>
     
    </tr>
  </thead>
<% @anpolls.each do |mypoll| %>
  <tbody>
    <%i +=1%>
      <tr>
        <td><%=i%></td>

        <td><%= mypoll.category.name.capitalize %></td>
        <% if !mypoll.user.admin %>
        <td><%= mypoll.user.email %></td>
        <%else%>
         <td>(a)|<%= mypoll.user.email %></td>
        <%end%>
        <%end%>  
      </tr> 
  </tbody>
</table>
<%end%>

     <br>
     <h2 align=center>Pie Chart</h2>
    
   <%= pie_chart @pollsarray %>
